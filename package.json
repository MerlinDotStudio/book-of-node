{
	"name": "node-postcss-es8-boilerplate",
	"version": "2.0.0",
	"main": "index.js",
	"author": "Mohammed Mulazada <thisismoniac@gmail.com>",
	"engines": {
		"node": "10.14"
	},
	"scripts": {
		"postinstall": "yarn run build:dir",
		"start": "node app.js",
		"build": "yarn run build:all",
		"dev": "concurrently \"yarn run watch:all \" \"yarn run copy:all:watch \" \"yarn run build:template \" \"yarn run hotreload \"",
		"build:dir": "mkdirp public ./public/scripts ./public/styles ./public/fonts ./public/images ./src ./src/scripts ./src/styles ./src/fonts ./src/images ./libs/template/ ./libs/template/component ./libs/template/component/{name_cc}",
		"build:template": "concurrently \" touch ./libs/template/component/{name_cc}/{name_cc}.css \" \" touch ./libs/template/component/{name_cc}/{name_cc}.js \" \" touch ./libs/template/component/{name_cc}/{name_cc}.ejs \"",
		"audit:js": "onchange \"./views/**/*.js\" \"./views/*.js\" -- yarn run eslint:js",
		"audit:css": "onchange \"./views/**/*.css\" -- yarn run eslint:css",
		"audit:ejs": "onchange $(find ./views -type f -iname '*.ejs') -- yarn run ejslint $(find ./views -type f -iname '*.ejs')",
		"eslint:css": "stylelint ./views/**/*.css --fix",
		"eslint:js": "eslint ./views/**/*.js --fix",
		"component": "sg generate component",
		"watch:all": "concurrently \"yarn run watch:js \" \"yarn run watch:css\" \"yarn run audit:css\" \"yarn run audit:js\" \"yarn run audit:ejs\" \"yarn run watch:node \"",
		"watch:css": "postcss --config './libs/postcss.dev.js' ./views/*.css  -d ./public/styles/ --verbose -w",
		"watch:js": "watchify ./views/index.js -t babelify -o ./public/scripts/index.js -v --debug",
		"watch:node": "nodemon app.js",
		"hotreload": "yarn run livereload . --exts 'ejs, css' -d",
		"build:all": "concurrently \" yarn run build:css \" \"yarn run build:js\" \"yarn run copy:all\"",
		"build:css": "postcss --config './postcss.config.js' ./views/*.css  -d ./public/styles/ --verbose",
		"build:js": "browserify ./views/index.js -t babelify | uglifyjs -cm -o ./public/scripts/index.js",
		"copy:all:watch": "concurrently \"yarn run copy:fonts -w\" \"yarn run copy:jsStatic -w\" \"yarn run copy:images -w\" \"yarn run copy:cssStatic -w\"",
		"copy:all": "concurrently \"yarn run copy:fonts\" \"yarn run copy:jsStatic\" \"yarn run copy:images\" \"yarn run copy:cssStatic\"",
		"copy:fonts": "cpx \"./src/fonts/**\" ./public/fonts",
		"copy:jsStatic": "cpx \"./src/scripts/**.js\" ./public/scripts",
		"copy:images": "cpx \"./src/images/**\" ./public/images",
		"copy:cssStatic": "cpx \"./src/styles/**\" ./public/styles"
	},
	"license": "MIT",
	"dependencies": {
		"body-parser": "^1.18.3",
		"dotenv": "^6.2.0",
		"ejs": "^2.6.1",
		"express": "^4.16.3"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/plugin-transform-runtime": "^7.2.0",
		"@babel/preset-env": "^7.2.3",
		"@babel/runtime": "^7.2.0",
		"autoprefixer": "^9.4.3",
		"babel-plugin-transform-async-to-generator": "^6.24.1",
		"babelify": "^10.0.0",
		"browserify": "^16.2.2",
		"concurrently": "^4.0.1",
		"cpx": "^1.5.0",
		"css-mqpacker": "^7.0.0",
		"cssnano": "^4.1.8",
		"eslint": "^5.1.0",
		"ejs-lint": "^0.3.0",
		"livereload": "^0.7.0",
		"mkdirp": "^0.5.1",
		"nodemon": "^1.17.5",
		"onchange": "^5.2.0",
		"postcss-cli": "^6.1.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-custom-media": "^7.0.7",
		"postcss-custom-properties": "^8.0.9",
		"postcss-discard-comments": "^4.0.0",
		"postcss-import": "^12.0.1",
		"postcss-mixins": "^6.2.0",
		"postcss-nested": "^4.1.1",
		"postcss-preset-env": "^6.5.0",
		"rimraf": "^2.6.2",
		"seng-generator": "^0.8.0",
		"stylelint": "^9.3.0",
		"uglify-js": "^3.3.27",
		"watchify": "^3.11.0"
	}
}
